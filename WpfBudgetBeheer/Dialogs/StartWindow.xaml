            FontSize="20" FontFamily="Bahnschrift Light"
            HorizontalAlignment="Left" Width="130" Margin="350,0,0,0"/>
        <Button  Style="{StaticResource RoundButtonTemplate}" x:Name="ButtonStart"
            Content="start !broke"  Click="ButtonStart_Click"
            Width="250" Height="30" Margin="0,150,0,0" 
            HorizontalAlignment="Center"     VerticalAlignment="Top"
        />
        <Button Style="{StaticResource RoundButtonTemplate}"
            x:Name="ButtonStop" Content="!broke afsluiten"   Click="ButtonStop_Click"
            Width="250" Height="30" Margin="0,10,0,0"
